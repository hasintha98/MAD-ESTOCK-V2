<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_UpdateAppInfo">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="96dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="3dp">

        <TextView
            android:id="@+id/textView_about"
            android:layout_width="215dp"
            android:layout_height="49dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:text="About Us"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView_contactus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Contact Us"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/editText_aboutUs"
        app:layout_constraintStart_toStartOf="@+id/editText_aboutUs"
        app:layout_constraintTop_toBottomOf="@+id/editText_aboutUs" />

    <EditText
        android:id="@+id/editText_aboutUs"
        android:layout_width="323dp"
        android:layout_height="131dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="132dp" />

    <EditText
        android:id="@+id/editText_contactUs"
        android:layout_width="308dp"
        android:layout_height="141dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/textView_contactus"
        app:layout_constraintStart_toStartOf="@+id/textView_contactus"
        app:layout_constraintTop_toBottomOf="@+id/textView_contactus" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="292dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        android:background="@color/colorPrimaryDark"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>